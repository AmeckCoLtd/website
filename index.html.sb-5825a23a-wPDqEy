  <script>
    function generateInvoice() {
      const client = document.getElementById('clientName').value;
      const amount = document.getElementById('amount').value;
      const description = document.getElementById('description').value;
      const date = new Date().toLocaleDateString();
      const invoiceHTML = `
        <h3>Invoice</h3>
        <p><strong>Date:</strong> ${date}</p>
        <p><strong>Client:</strong> ${client}</p>
        <p><strong>Description:</strong> ${description}</p>
        <p><strong>Amount:</strong> TZS ${amount}</p>
        <button onclick="downloadPDF('${client}', '${description}', '${amount}', '${date}')">Download PDF</button>
        <button onclick="emailInvoice('${client}', '${description}', '${amount}', '${date}')">Email Invoice</button>
      `;
      document.getElementById('invoiceOutput').innerHTML = invoiceHTML;
    }

    function downloadPDF(client, description, amount, date) {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      doc.setFontSize(12);
      doc.text("INVOICE", 105, 20, { align: "center" });
      doc.text(`Date: ${date}`, 20, 40);
      doc.text(`Client: ${client}`, 20, 50);
      doc.text(`Description: ${description}`, 20, 60);
      doc.text(`Amount: TZS ${amount}`, 20, 70);
      doc.save(`Invoice-${client}.pdf`);
    }

    function emailInvoice(client, description, amount, date) {
      alert(`Emailing invoices requires backend setup. This is a placeholder.`);
    }
  </script>
